{% extends 'layouts/app.twig' %}

{% block content %}
    <header class="header-frontpage py-12">
        <div class="container mx-auto">
            <section class="flex flex-wrap">
                {% for branche in branches %}
                    {{ include('partials/tease/branche.html.twig', { branche: branche }) }}
                {% endfor %}
            </section>
        </div>
    </header>
    <section class="bg-primary-200 py-12">
        <div class="container mx-auto px-8">
            <h3 class="text-2xl my-8">{{  __('Nieuwe vacatures', 'ppmm') }}</h3>
            <div class="md:flex">
                {% for vacature in vacatures|slice(0,3) %}
                    {% include 'partials/tease/vacature-home.twig' with { post: vacature } only %}
                {% endfor %}
            </div>
            <div class="flex w-full mt-8">
                <span class="text-secondary-500 font-title font-light">
                    {{ __("%d van de %d vacatures", 'ppmm')|format(vacatures|slice(0,3)|length, vacatures|length) }}
                </span>

                <a href="{{ fn('get_post_type_archive_link', 'vacature' ) }}vastgoed" title="Vastgoed vacatures" class="home-meer-vacatures font-light">
                    {{ __('Bekijk alle vacatures', 'ppmm') }}
                </a>
            </div>
        </div>
    </section>
    <main class="container main-content ">
        <aside class="md:w-1/3">
            {% set _imgContent = Image(post.meta('foto_content')) %}
            <picture>
                <source srcset="{{ _imgContent.src('medium') }}" media="(max-width: 413px)" />
                <source srcset="{{ _imgContent.src('medium_large') }}" media="(min-width: 414px) and (max-width: 768px)" />
                <img src="{{ _imgContent.src('large') }}" alt="{{ _imgContent.alt }}"  class="homepage-img">
            </picture>
        </aside>
        <section class="content md:w-1/3 md:mx-8 md:py-8 pb-0">
            {{ post.content|wpautop|shortcodes }}
        </section>
        <aside class="md:w-1/3">
            <article class="border-l-12 border-secondary-500 bg-primary-200 p-8 content">
                {{ post.meta('sidebar_content') }}
            </article>
        </aside>
    </main>
{% endblock %}
